# Environment Variables Configuration
# Copy this file to .env and fill in your API keys

# ===== JWT AUTHENTICATION =====
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRY=24h

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=Your-Key-Here

# Anthropic API Key  
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=Your-Key-Here

# Deepseek AI API Key
# Get from: https://platform.deepseek.com/
#DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Microsoft AI API Keys
# MAI-1-preview: Apply at https://aka.ms/mai-1-preview-api
#MAI_API_KEY=your_mai_api_key_here
#MAI_VOICE_API_KEY=your_mai_voice_api_key_here
#MAI_ENDPOINT=https://your-mai-endpoint.azure.com/

# Azure Voice Live API (for MAI-Voice-1)
# Get from: Azure AI Foundry
#AZURE_VOICE_LIVE_ENDPOINT=https://your-endpoint.azure.com/
#AZURE_VOICE_LIVE_API_KEY=your_azure_voice_live_key_here

# Adobe AI (Firefly Services) API Keys
# Get from: https://developer.adobe.com/console
ADOBE_CLIENT_ID=Your-Key-Here


# Canva API Keys
# Get from: https://www.canva.dev/
#CANVA_CLIENT_ID=your_canva_client_id_here
#CANVA_CLIENT_SECRET=your_canva_client_secret_here
#CANVA_ACCESS_TOKEN=your_canva_access_token_here

# Mistral AI API Key
# Get from: https://console.mistral.ai/
DEEPSEEK_API_KEY=Your-Key-Here

# Perplexity AI API Key
# Get from: https://www.perplexity.ai/account/api
PERPLEXITY_API_KEY=Your-Key-Here


# Server Configuration
PORT=3000


# ===== EMAIL CONFIGURATION (Optional - for password reset) =====
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-app-password
EMAIL_FROM=Multi-LLM Platform <noreply@yourdomain.com>

# ===== PAYMENT GATEWAY (Optional - for subscriptions) =====
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ===== SECURITY CONFIGURATION =====
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3000

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info
LOG_FILE_PATH=./logs/application.log

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ===== CONTENT SETTINGS =====
DEFAULT_FREE_TOKENS=1000
MAX_CONTENT_LENGTH=50000
SUPPORTED_FILE_TYPES=txt,pdf,doc,docx

# ===== CACHE CONFIGURATION (Optional - Redis) =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== MONITORING (Optional) =====
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_ID=your-google-analytics-id

# Optional: Enable debug logging
DEBUG=false


# SQL Server connection (for mssql package)
DB_SERVER=localhost
DB_INSTANCE=MSSQLLocalDB
DB_DATABASE=AI_App_DB
DB_PORT=1433             # adjust if needed
DB_ENCRYPT=true         # or false depending on your setup
